@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <title>Iniciar Sesión</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <style>

       
        /* Estilos actuales y ajustados */
        body {
            background: linear-gradient(135deg, #FFD8CB, #AED9E0);
            height: 100vh;
            margin: 0;
            display: flex;
            flex-direction: column;
            overflow: hidden; /* Asegura que no haya scroll inesperado */
        }

        .background-video {
            position: fixed; /* Fija el video para que cubra toda la pantalla */
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            object-fit: cover;
            z-index: -1; /* Asegura que el video esté detrás de todo el contenido */
        }

        header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 10px;
            z-index: 1; /* Asegura que el header esté sobre el video */
        }

        .logo-container {
            text-align: center;
            padding: 10px;
            z-index: 1;
        }

        .logo {
            width: 150px; /* Ajusta el tamaño del logo según tus necesidades */
            height: 100px;
        }

        .card {
            background-color: rgba(255, 255, 255, 0.2); /* Blanco con opacidad */
            max-width: 600px; /* Ancho máximo del cuadro de inicio de sesión */
            width: 110%;
            
            padding: 20px; /* Ajusta el padding para un mejor aspecto */
        }

        .container {
            max-width: 900px;
            width: 100%;
            flex-grow: 1;
            display: flex;
            align-items: center;
            justify-content: flex-start;
            margin-top: -20px; /* Ajusta el margen superior para elevar el contenedor de inicio de sesión */
       
        }
    

        footer {
            background: linear-gradient(135deg, #7EC8E3, #3498DB); /* Degradado de celeste a un tono más fuerte */
            padding: 5px;
            text-align: center;
            margin-top: 10px; /* Espaciado superior del pie de página */
            height: 30px; /* Altura del footer */
        }
    </style>
</head>
<body>
    <video autoplay muted loop class="background-video">
        <source src="/imagenes/fondomov2.mp4" type="video/mp4">
        Tu navegador no soporta el elemento de video.
    </video>


    <div class="container mt-5 pt-5">

        <div class="row justify-content-center">

            <div class="card">
                <div class="logo-container">
                    <img class="logo" src="./imagenes/fondo2.png" alt="Logo">
                    <h1 style="font-size: 20px;">TOTAL ENERGY FITNESS</h1>
                </div>
                <div class="card-header">
                    INICIAR SESION
                </div>
                <div class="card-body">

                    <form asp-controller="Login" asp-action="IniciarSesion" method="post">

                        <input class="form-control mb-3" type="text" placeholder="Correo" required name="correo" />
                        <input class="form-control mb-3" type="password" placeholder="Contraseña" required name="password" />
                        <div class="d-grid gap-2 mb-3">
                            <button class="btn btn-primary" type="submit">Iniciar Sesión</button>
                        </div>
                        @if (ViewData["Mensaje"] != null)
                        {
                            <div class="form-group">
                                <div class="alert alert-danger" role="alert">
                                    @ViewData["Mensaje"]
                                </div>
                            </div>
                        }

                        ¿No tienes una cuenta? <a href="@Url.Action("Registro","Login")"> ¡Regístrate!</a>
                    </form>

                </div>
            </div>

        </div>

    </div>

    

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>